<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.n_puzzle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/use_fifteen_puzzle"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.example.n_puzzle.ImageSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
        	android:name = "com.example.n_puzzle.PreviewActivity"
        	android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.example.n_puzzle.GamePlayActivity"
            android:label="@string/title_activity_game_screen" 
            android:configChanges="orientation|screenSize">
        </activity>

        <activity
                android:name="com.example.n_puzzle.PictureReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*"/>
            </intent-filter>

        </activity>

        <activity android:name=".ImagePickActivity">
        </activity>

    </application>

</manifest>